[logging]
 admin_server     = <%= @krb5_logging_admin_server %>
 default          = <%= @krb5_logging_default %>
 kdc              = <%= @krb5_logging_kdc %>

[libdefaults]
 default_realm    = <%= @krb5_libdefaults_default_realm.upcase %>
 dns_lookup_kdc   = <%= @krb5_libdefaults_dns_lookup_kdc %>
 dns_lookup_realm = <%= @krb5_libdefaults_dns_lookup_realm %>
 forwardable      = <%= @krb5_libdefaults_forwardable %>
 renew_lifetime   = <%= @krb5_libdefaults_renew_lifetime %>
 ticket_lifetime  = <%= @krb5_libdefaults_ticket_lifetime %>

[realms]
<%= @smb_realm.upcase %> = {
 admin_server     = <%= @krb5_realms_admin_server %>
 <%- Array(@krb5_realms_kdc).each do |server| -%>
 kdc              = <%= server %>
 <%- end -%>
 }

[domain_realm]
 .<%= @smb_realm.downcase %>          = <%= @smb_realm.upcase %>
 <%= @smb_realm.downcase %>           = <%= @smb_realm.upcase %>
